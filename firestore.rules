rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn() && request.auth.token.admin == true;
    }

    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }
    
    // --- User Profiles ---
    // Allow users to read their own profile.
    // Allow admins to read any profile.
    // Only allow users to create their own profile document.
    // Admins can update any user's role.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isAdmin(); // Only admins can change roles
      allow delete: if isAdmin(); // Only admins can delete users
      
      // --- Subcollections ---
      // Users can only read/write to their own subcollections.
      match /sessions/{sessionId} {
        allow read, write: if isOwner(userId);
      }
      
      match /verificationLog/{logId} {
         allow read, write: if isOwner(userId);
      }
    }
    
    // --- Collection Group Queries (for Admin Dashboard) ---
    // Admins need read access to these collection groups.
    match /{path=**}/sessions/{sessionId} {
      allow read: if isAdmin();
    }
    match /{path=**}/verificationLog/{logId} {
      allow read: if isAdmin();
    }

    // --- Projects ---
    // Any signed-in user can read projects.
    // Only admins can create, update, or delete projects.
    match /projects/{projectId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }
    
    // --- Tasks ---
    // Any signed-in user can read tasks (to see project assignments).
    // Only admins can create new tasks.
    // Admins or the assigned user can update a task.
    match /tasks/{taskId} {
      allow read: if signedIn();
      allow create: if isAdmin();
      allow update: if isAdmin() || (isOwner(request.resource.data.assignedTo) && request.resource.data.assignedTo == resource.data.assignedTo);
    }
  }
}