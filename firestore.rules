
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow admin full read/write access to all collections
    function isAdmin() {
      return request.auth.token.email == "keerthi.vijaibabu@gmail.com";
    }

    // Users can only read/write their own documents
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Allow read for all authenticated users, but write only for admin
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Allow read for all authenticated users, but write only for admin
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Users can create their own sessions, admin can read all
    match /userSessions/{sessionId} {
      allow read: if isAdmin();
      allow create: if request.auth != null && request.resource.data.userEmail == request.auth.token.email;
    }

    // Users can create their own verification logs, admin can read all
    match /verificationLog/{logId} {
       allow read: if isAdmin();
       allow create: if request.auth != null && request.resource.data.userEmail == request.auth.token.email;
    }
  }
}
