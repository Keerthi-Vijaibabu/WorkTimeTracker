rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function signedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
        return signedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId}/{documents=**} {
      allow read, write: if signedIn() && request.auth.uid == userId;
    }
    
    match /projects/{projectId} {
        allow read: if signedIn();
        allow write: if isAdmin();
    }
    
    match /tasks/{taskId} {
        allow read: if signedIn();
        allow create, update: if isAdmin();
        allow update: if signedIn() && request.auth.token.email == request.resource.data.assignedTo && request.resource.data.status != resource.data.status;
    }

    // Rules for collection group queries by admins
    match /{path=**}/sessions/{sessionId} {
      allow read: if isAdmin();
    }

    match /{path=**}/verificationLog/{logId} {
      allow read: if isAdmin();
    }
  }
}
