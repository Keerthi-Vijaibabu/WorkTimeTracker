
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn() && request.auth.token.admin == true;
    }

    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId || isAdmin();
      allow create: if signedIn();

      match /sessions/{sessionId} {
        allow read, write: if request.auth.uid == userId;
      }

      match /verificationLog/{logId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    match /projects/{projectId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    match /tasks/{taskId} {
      allow read: if signedIn();
      allow create: if isAdmin();
      allow update: if isAdmin() || 
                      (signedIn() && 
                       resource.data.assignedTo == request.auth.token.email && 
                       request.resource.data.keys().hasOnly(['status']));
    }

    // Collection Group queries
    match /{path=**}/sessions/{sessionId} {
      allow read: if isAdmin();
    }

    match /{path=**}/verificationLog/{logId} {
      allow read: if isAdmin();
    }
  }
}
