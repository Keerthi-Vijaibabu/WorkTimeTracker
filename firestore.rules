rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // Check for a custom claim on the auth token.
      return signedIn() && request.auth.token.admin == true;
    }

    // USERS
    match /users/{userId} {
      // A user can read their own document. Admins can read any user document.
      allow read: if signedIn() && (request.auth.uid == userId || isAdmin());
      // A user can update their own document. Admins can update any user document.
      allow update: if signedIn() && (request.auth.uid == userId || isAdmin());
      // Any signed in user can create their own user document on signup.
      allow create: if signedIn() && request.auth.uid == userId;
       // Admins can delete users.
      allow delete: if isAdmin();
    }

    // PROJECTS
    match /projects/{projectId} {
      // Any signed-in user can read projects. Admins can write.
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    // TASKS
    match /tasks/{taskId} {
      // Any signed-in user can read tasks. Admins can write.
      allow read: if signedIn();
      allow write: if isAdmin();
      // Allow a user to update the status of a task assigned to them.
      allow update: if signedIn() && (isAdmin() || (request.resource.data.assignedTo == request.auth.token.email && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status'])));
    }
    
    // SESSIONS (Subcollection of Users)
    match /users/{userId}/sessions/{sessionId} {
      // Users can write to their own sessions subcollection.
      // Admins can read any session. This rule does NOT cover collection group queries.
      allow read: if signedIn() && (request.auth.uid == userId || isAdmin());
      allow write: if signedIn() && request.auth.uid == userId;
    }

    // VERIFICATION LOG (Subcollection of Users)
     match /users/{userId}/verificationLog/{logId} {
      // Users can write to their own verification log.
      allow write: if signedIn() && request.auth.uid == userId;
    }

    // RULES FOR COLLECTION GROUP QUERIES (Needed for Admin Dashboard)
    match /{path=**}/sessions/{sessionId} {
        // Admins can list all sessions from all users.
        allow list: if isAdmin();
    }

    match /{path=**}/verificationLog/{logId} {
       // Admins can list all verification logs from all users.
       allow list: if isAdmin();
    }
  }
}