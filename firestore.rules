rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helpers
    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // USERS (doc id = auth.uid)
    match /users/{uid} {
      allow read, write: if isAdmin();
      allow get, update: if signedIn() && request.auth.uid == uid;
      allow create: if signedIn();
    }

    // PROJECTS
    match /projects/{projectId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    // TASKS
    match /tasks/{taskId} {
      allow read: if signedIn();
      allow create, delete: if isAdmin();
      
      // Admins can update anything on a task.
      // A non-admin can ONLY update the 'status' field of a task assigned to them.
      allow update: if isAdmin() || (
        signedIn() 
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status'])
        && resource.data.assignedTo == request.auth.token.email
      );
    }
    
    // USER-SPECIFIC SUBCOLLECTIONS
    match /users/{uid}/{collection}/{docId} {
        // Only the user themselves or an admin can access these subcollections.
        allow read, write: if (signedIn() && request.auth.uid == uid) || isAdmin();
    }
  }
}
